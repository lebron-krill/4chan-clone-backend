generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Board {
  id    String @id @default(uuid())
  name  String @unique
  posts Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  username  String
  content   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId   String
}
